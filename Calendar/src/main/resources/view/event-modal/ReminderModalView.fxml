<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import view.controls.TimeSpinnerValueFactory?>
<?import view.controls.ControlTable?>
<?import view.controls.EnumCheckBoxCallback?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0"
	prefWidth="580.0" spacing="10.0" xmlns="http://javafx.com/javafx/18"
	xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<HBox fx:id="dailyOcc" />
		<HBox prefWidth="200.0" spacing="10.0" fx:id="weeklyOcc">
			<children>
				<Label text="Chose Days:" />
				<ListView>
					<items>
						<FXCollections fx:factory="observableArrayList"
							EnumCheckBoxCallback.enumClass="java.time.DayOfWeek" />
					</items>
					<cellFactory>
						<EnumCheckBoxCallBack
							enumType="java.time.DayOfWeek" />
					</cellFactory>
				</ListView>

			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
		<HBox prefWidth="200.0" spacing="10.0" fx:id="monthlyOcc">
			<children>
				<Label text="Chose Days:" />
				<Spinner />


			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
		<HBox prefWidth="200.0" spacing="10.0" fx:id="yearlyOcc">
			<children>
				<Label text="Chose Days:" />
				<Spinner />
				<ComboBox />


			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
		<HBox prefWidth="200.0" spacing="10.0" fx:id="onlyOcc">
			<children>
				<Label text="Chose Dates:" />
				<DatePicker />


			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>


	</fx:define>
	<children>

		<HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
			<children>
				<Label text="Time:" />
				<Spinner editable="true">
					<valueFactory>
						<TimeSpinnerValueFactory />
					</valueFactory>
				</Spinner>

			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>

		<HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
			<children>
				<Label text="Frequency" />
				<ComboBox prefWidth="150.0" />
			</children>
			<VBox.margin>
				<Insets />
			</VBox.margin>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
		<BorderPane prefHeight="200.0" prefWidth="200.0" />
		<ButtonBar prefHeight="40.0" prefWidth="200.0">
			<buttons>
				<Button ButtonBar.buttonData="LEFT" mnemonicParsing="false"
					text="Back" />
				<Button mnemonicParsing="false" text="Apply" />
			</buttons>
		</ButtonBar>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</VBox>
