<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import view.controls.ControlTable?>

<?import view.controls.TimeSpinnerValueFactory?>
<fx:root type="javafx.scene.layout.VBox" maxHeight="-Infinity"
	maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
	prefHeight="200.0" prefWidth="580.0" spacing="10.0"
	xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
	<children>

		<HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
			<children>
				<Label text="Due Time:" />
				<Spinner editable="true">
					<valueFactory>
						<TimeSpinnerValueFactory />
					</valueFactory>
				</Spinner>

			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
		<HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
			<children>
				<Label text="Due Date: " />
				<DatePicker prefWidth="150.0" />
			</children>
			<VBox.margin>
				<Insets />
			</VBox.margin>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>

		<HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
			<children>
				<Label text="Tasks: " />
				<ControlTable />
			</children>
			<VBox.margin>
				<Insets />
			</VBox.margin>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>


		<ButtonBar prefHeight="40.0" prefWidth="200.0">
			<buttons>
				<Button ButtonBar.buttonData="LEFT" mnemonicParsing="false"
					text="Back" />
				<Button mnemonicParsing="false" text="Apply" />
			</buttons>
		</ButtonBar>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</fx:root>
