<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ButtonType?>

<?import view.controls.TimeSpinnerValueFactory?>


<DialogPane xmlns="http://javafx.com/javafx/18"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.EventModalController">
	<content>
		<VBox maxHeight="-Infinity" maxWidth="-Infinity"
			minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
			prefWidth="600.0" spacing="10.0">
			<children>
				<HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
					<children>
						<Label text="Type of Event:" />
						<ComboBox prefWidth="150.0" fx:id="typeCombo"
							onAction="#selectedType">
							<items>
								<String fx:value="REMINDER" />
								<String fx:value="TASK" />
								<String fx:value="ASSIGNMENT" />
							</items>
						</ComboBox>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
				</HBox>
				<HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
					<children>
						<Label text="Calendar:" />
						<ComboBox prefWidth="150.0" fx:id="calendarCombo" />
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
				</HBox>
				<HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
					<children>
						<Label text="Name of Event:" />
						<TextField promptText="Enter the Name" fx:id="nameField" />
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
				</HBox>
				<HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
					<children>
						<Label text="Reminder Time:" />
						<Spinner editable="true" fx:id="reminderSpinner">
							<valueFactory>
								<TimeSpinnerValueFactory />
							</valueFactory>
						</Spinner>

					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
				</HBox>
				<BorderPane prefHeight="200.0" prefWidth="200.0">
					<center>
						<VBox fx:id="eventSpecBox" />
					</center>
				</BorderPane>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</VBox>
	</content>
	<header>
		<Label alignment="CENTER" text="Create Event">
			<font>
				<Font name="Arial Bold" size="24.0" />
			</font>
			<padding>
				<Insets bottom="20.0" top="20.0" />
			</padding>
		</Label>
	</header>
	<buttonTypes>
		<ButtonType buttonData="LEFT" text="Back" />
		<ButtonType fx:constant="APPLY" />

	</buttonTypes>
</DialogPane>
