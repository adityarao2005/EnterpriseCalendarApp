<?xml version="1.0" encoding="UTF-8"?>

<?import view.controls.UCalendar?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
	xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.HomeController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem mnemonicParsing="false" text="Close" />
						<MenuItem mnemonicParsing="false"
							onAction="#logoutAction" text="Log Out" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Edit">
					<items>
						<MenuItem mnemonicParsing="false" text="Delete" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<right>
		<VBox fillWidth="true" prefHeight="200.0" prefWidth="270.0"
			spacing="10" BorderPane.alignment="CENTER">
			<children>
				<UCalendar fx:id="dayChooser" onAction="#dateSelected" />

				<TitledPane collapsible="false" prefHeight="200.0"
					prefWidth="200.0" text="Calendars">
					<content>
						<ListView fx:id="calendars" prefHeight="200.0"
							prefWidth="200.0" />
					</content>
				</TitledPane>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</VBox>


	</right>
	<left>
		<VBox prefHeight="200.0" prefWidth="250.0" spacing="10.0"
			BorderPane.alignment="CENTER">
			<children>
				<TitledPane collapsible="false" prefHeight="200.0"
					prefWidth="200.0" text="To-do list">
					<content>
						<ListView prefHeight="200.0" prefWidth="200.0"
							fx:id="todoList" />
					</content>
				</TitledPane>
				<Button mnemonicParsing="false" prefWidth="Infinity"
					text="Create New Event" onAction="#onCreateTask" />
				<Button mnemonicParsing="false" prefWidth="Infinity"
					text="Manage Events" onAction="#onManage" />
				<Button mnemonicParsing="false" prefWidth="Infinity"
					text="Refresh" onAction="#onRefresh" />
				<Button mnemonicParsing="false" prefWidth="Infinity"
					text="Create Calendar" onAction="#onCreateCal" />
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</VBox>
	</left>
	<center>
		<AnchorPane prefWidth="600" prefHeight="570">
			<fx:include source="/view/controls/ScheduleView.fxml"
				fx:id="schedule" />
		</AnchorPane>

	</center>
</BorderPane>
