<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" xmlns="http://javafx.com/javafx/18"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.WelcomeController">
	<center>
		<VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0"
			BorderPane.alignment="CENTER">
			<children>
				<Button mnemonicParsing="false" onAction="#loginAction"
					prefWidth="Infinity" text="Login" styleClass="primary-button" />
				<Button mnemonicParsing="false" onAction="#registerAction"
					prefWidth="Infinity" text="Register" styleClass="primary-button" />
			</children>
			<padding>
				<Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
			</padding>
		</VBox>
	</center>
	<top>
		<BorderPane prefHeight="200.0" prefWidth="200.0"
			BorderPane.alignment="CENTER">
			<center>
				<Label text="ICS Calendar App" BorderPane.alignment="CENTER"
					styleClass="title-label" />
			</center>
			<bottom>
				<Label text="For Task Management and Scheduling"
					BorderPane.alignment="CENTER" />
			</bottom>
			<padding>
				<Insets top="100.0" />
			</padding>
		</BorderPane>
	</top>
</BorderPane>
